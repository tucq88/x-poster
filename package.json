{
  "name": "x-poster-cli",
  "version": "1.0.0",
  "description": "Interactive CLI bot for posting to X (Twitter) via API",
  "main": "dist/cli.js",
  "bin": {
    "x-poster": "dist/cli.js",
    "xpost": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js",
    "dev": "ts-node src/cli.ts",
    "debug": "ts-node src/debug-credentials.ts",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "global-install": "npm run build && npm link",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false"
  },
  "keywords": [
    "twitter",
    "x",
    "bot",
    "api",
    "typescript",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "twitter-api-v2": "^1.15.2",
    "dotenv": "^16.3.1",
    "inquirer": "^9.2.12",
    "commander": "^11.1.0",
    "chalk": "^4.1.2",
    "ora": "^5.4.1",
    "figlet": "^1.7.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/inquirer": "^9.0.7",
    "@types/figlet": "^1.5.8",
    "@types/jest": "^29.5.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.2",
    "ts-node": "^10.9.1"
  }
}
